<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - URL Shortener</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
      <h1>URL Shortener Dashboard</h1>
      <a href="/logout" class="btn btn-outline-danger">Logout</a>
    </div>

    <form action="/shortUrls" method="POST" class="my-4 form-inline">
      <input required placeholder="Enter Full URL" type="url" name="fullUrl" class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Shorten</button>
    </form>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a>
            </td>
            <td>
              <a href="/<%= shortUrl.short %>" target="_blank">/<%= shortUrl.short %></a>
            </td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
